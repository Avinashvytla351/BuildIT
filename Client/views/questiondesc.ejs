<!DOCTYPE html>
<html lang="zxx">

<head>
  <meta charset="utf-8">
  <title>BuildIT</title>

  <!-- mobile responsive meta -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  
  <!-- ** Plugins Needed for the Project ** -->
  <!-- Bootstrap -->
  <link rel="stylesheet" href="plugins/bootstrap/bootstrap.min.css">
  <!-- slick slider -->
  <link rel="stylesheet" href="plugins/slick/slick.css">
  <!-- themefy-icon -->
  <link rel="stylesheet" href="plugins/themify-icons/themify-icons.css">

  <!-- Main Stylesheet -->
  <link href="css/style.css" rel="stylesheet">
  
  <!--Favicon-->
  <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">
  <link rel="icon" href="images/favicon.ico" type="image/x-icon">

</head>
<style>
.button1 {
  border-radius: 4px;
  background-color: #454fd4;
  border: none;
  color: white;
  text-align: center;
  font-size:  15px;
  padding: 5px;
  width: 110px;
  transition: all 0.5s;
  cursor: pointer;
  margin: 5px;
}

.button1 span {
  cursor: pointer;
  display: inline-block;
  transition: 1s;
}

.button1 span:after {
  content: '\21B6';
  opacity: 0;
  top: 50px;
  right: 20px;
  transition: 0.3s;
}

.button1:hover span {
  padding-right: 20px;
}

.button1:hover span:after {
  opacity: 1;
  right: 0;
  padding-bottom:20px;  
}
.button {
  border-radius: 4px;
  background-color: #454fd4;
  border: none;
  color: white;
  /* text-align: center; */
  font-size:  px;
  padding: 5px;
  width: 120px;
  transition: all 0.5s;
  cursor: pointer;
  margin: 5px;
}
.button span {
  cursor: pointer;
  display: inline-block;
  position: relative;
  transition: 1s;
}
.button span:after {
  content: '\00bb';
  position: "relative";
  opacity: 0;
  top: 0;
  right: -20px;
  transition: 0.5s;
}
.button:hover span {
  padding-left: 25px;
}
.button:hover span:after {
  opacity: 1;
  right: 0;
}
</style>

<body>

<script>
function close_window() {
    close();
}
</script>
<!-- about -->
<section class="section pt-5">
    <div class="container">
    <div class="row">
      <div class="col-md-8">
        <button onclick="close()" class = "button1" ><a href="javascript:close_window();"><span style="color:white" >Close</span></a></button><br><br>
        <button class = "button" style = "float: right" position = "right"><a href= "<%= data.url %>/ide/<%= data[0].questionId %>" style="color:white" target="_blank"><span>IDE</span></a></button></a>

        <h3 class="section-title"><%= data[0].questionName %> - #<%= data[0].questionId %></h3>
        <div class = "font-tertiary text-white">
            <p class="cars-text"><%= data[0].questionDescriptionText %>
            </p>
            <% if (data[0].difficulty !== undefined) { %>
            <sup>Difficulty: <%= data[0].difficulty %></sup>
            <% } %>
        </div>
        <% if(data[0].questionInputText !== undefined ) { %>
      <div>          
            <h4><b>Input:</b></h4>
            <blockquote style="font-size: 20px">
              <li><%= data[0].questionInputText %></li>
            </blockquote>
          </div>
          <% } %>
          <br>
          <% if(data[0].questionOutputText !== undefined ) { %>
            <div>
              <h4><b>Output:</b></h4>
              <blockquote style="font-size: 20px">
                <li><%= data[0].questionOutputText %></li>
              </blockquote>
            </div>
            <% } %>
        <br>
        <% if(data[0].questionExampleInput1 !== undefined && data[0].questionExampleInput2 !== undefined && data[0].questionExampleInput3 !== undefined) { %>
        <div>
          <h4><b>Sample Input:</b></h4><br>
            <pre style="font-size: 18px"><%= data[0].questionExampleInput1 %></pre>
            <pre style="font-size: 18px"><%= data[0].questionExampleInput2 %></pre>
            <pre style="font-size: 18px"><%= data[0].questionExampleInput3 %></pre>
          </div>
        <% } %>
        <br>
        <% if(data[0].questionExampleOutput1 !== undefined && data[0].questionExampleOutput2 !== undefined && data[0].questionExampleOutput3 !== undefined) { %>
          <div>
            <h4><b>Sample Output :</b></h4>
            <pre style="font-size: 18px"><%= data[0].questionExampleOutput1 %></pre>
            <pre style="font-size: 18px"><%= data[0].questionExampleOutput2 %></pre>
            <pre style="font-size: 18px"><%= data[0].questionExampleOutput3 %></pre>
          </div>
          <% } %>
          <br>
          <% if (data[0].questionExplanation !== undefined) { %>
          <div>    
          <h4><b>Explanation:</b></h4>
          <p class="cars-text"><%= data[0].questionExplanation %></p>
        </div>
        <% } %>
        <br>  
        <% if (data[0].author !== undefined) { %>
        <div>
          <h4><b>Author:</b></h4>
          <p class="cars-text"><%= data[0].author %></p>
        </div>
        <% } %>
        <button class = "button" position = "right"><a href= "<%= data.url %>/ide/<%= data[0].questionId %>" style="color:white" target="_blank"><span>IDE</span></a></button></a>
    </div>
  </div>
</section>

<!-- jQuery -->
<script src="plugins/jQuery/jquery.min.js"></script>
<!-- Bootstrap JS -->
<script src="plugins/bootstrap/bootstrap.min.js"></script>
<!-- slick slider -->
<script src="plugins/slick/slick.min.js"></script>
<!-- filter -->
<script src="plugins/shuffle/shuffle.min.js"></script>

<!-- Main Script -->
<script src="js/script.js"></script>

</body>
</html>