<!DOCTYPE html>
<html lang="zxx">
  <head>
    <meta charset="utf-8" />
    <title id="demo1">Leaderboard</title>

    <!-- mobile responsive meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1"
    />

    <!-- ** Plugins Needed for the Project ** -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/plugins/bootstrap/bootstrap.min.css" />
    <!-- slick slider -->
    <link rel="stylesheet" href="/plugins/slick/slick.css" />
    <!-- themefy-icon -->
    <link rel="stylesheet" href="/plugins/themify-icons/themify-icons.css" />
    <link rel="icon" type="image/png" href="../../images/logo-backup2.png" />

    <!-- Main Stylesheet -->
    <link href="/css/style.css" rel="stylesheet" />
    <link href="/datatables/dataTables.min.css" rel="stylesheet" />

    <!--Favicon-->
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon" />
  </head>

  <body>
    <% include ../views/partials/header %>

    <!-- page title -->
    <section
      class="page-title bg-primary position-relative"
      style="height: 1vh"
    >
      <div class="container">
        <div class="row">
          <div class="col-12 text-center">
            <h2 class="text-white font-tertiary">Leaderboard</h2>
            <br />
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div><%= JSON.stringify(data) %></div>
        <table
          id="leaderboard"
          class="table table-striped table-bordered"
          style="width: 100%"
        >
          <thead>
            <tr>
              <!-- Dynamic headers -->
              <% Object.keys(data[0]).forEach((val)=>{ %>
              <th><%= val %></th>
              <% }) %>
            </tr>
          </thead>
          <tbody>
            <% for (let i = 0; i < data.length; i++ ){ %>
            <tr>
              <% Object.keys(data[i]).forEach((col)=> { %>
              <td><%= data[i][col] %></td>
              <% }) %>
            </tr>
            <% } %>
          </tbody>
          <tfoot>
            <tr>
              <!-- Dynamic headers -->
              <% Object.keys(data[0]).forEach((val)=>{ %>
              <th><%= val %></th>
              <% }) %>
            </tr>
          </tfoot>
        </table>
      </div>
    </section>

    <!-- jQuery -->
    <script src="/plugins/jQuery/jquery.min.js"></script>
    <script type="text/javascript" src="/datatables/datatables.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="/plugins/bootstrap/bootstrap.min.js"></script>
    <!-- slick slider -->
    <script src="/plugins/slick/slick.min.js"></script>
    <!-- filter -->
    <script src="/plugins/shuffle/shuffle.min.js"></script>

    <!-- Main Script -->
    <script src="/js/script.js"></script>

    <script>
      $(document).ready(function () {
        $("#leaderboard").DataTable();
      });
    </script>
  </body>
</html>
